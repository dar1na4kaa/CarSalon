<Page x:Class="Carsalon.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Carsalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="MainPage">

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center">Автосалон</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox HorizontalAlignment="Left"></TextBox>
                <Button Width="110">Поиск</Button>
                <Button Width="150">Добавить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
